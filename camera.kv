
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
  transition: FadeTransition()
  MainScreen:
  AnotherScreen:

<MainScreen>:
  name: "main"
  BoxLayoutW:
    Button:
        text: 'shot'
        on_release: root.take_shot()	

<AnotherScreen>:
  name: "other"
	  FloatLayout:
    Painter
    Button:
      color: 0,1,0,1
      font_size: 25
      size_hint: 0.3,0.2
      text: "Back Home"
      on_release: app.root.current = "main"
      pos_hint: {"right":1, "top":1}


<BoxLayoutW>:

    Button:
        text: 'shot'
        on_release: root.take_shot()
